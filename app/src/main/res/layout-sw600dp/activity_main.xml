<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical" >

    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true" />

    <info.hoang8f.widget.FButton
        android:id="@+id/todayBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/calendarView"
        android:layout_below="@id/calendarView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:minWidth="160dp"
        android:padding="5dp"
        android:text="Mostrar hoy"
        fbutton:buttonColor="@color/fbutton_color_sun_flower"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/fbutton_color_orange"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/accessBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/calendarView"
        android:layout_below="@id/calendarView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="30dp"
        android:minWidth="160dp"
        android:padding="5dp"
        android:text="Acceder"
        fbutton:buttonColor="@color/fbutton_color_emerald"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/fbutton_color_nephritis"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />

</RelativeLayout>