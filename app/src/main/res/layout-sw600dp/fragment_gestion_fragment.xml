<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="es.rpallas.gestionalumnos.GestionFragment" >

    <TextView
        android:id="@+id/gestionNombreAlumno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/nombrealumno"
        android:textSize="30sp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/matematicasBtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:minWidth="260dp"
        android:padding="5dp"
        android:text="Matemáticas"
        android:textSize="24sp"
        fbutton:buttonColor="@color/fbutton_color_alizarin"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/fbutton_color_pomegranate"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/lenguaBtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:minWidth="260dp"
        android:padding="5dp"
        android:text="Lengua"
        android:textSize="24sp"
        fbutton:buttonColor="@color/fbutton_color_peter_river"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/fbutton_color_belize_hole"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/conocimientoBtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:minWidth="260dp"
        android:padding="5dp"
        android:text="C. del medio"
        android:textSize="24sp"
        fbutton:buttonColor="@color/fbutton_color_emerald"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/fbutton_color_nephritis"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />

    <info.hoang8f.widget.FButton
        android:id="@+id/plasticaBtn"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:minWidth="260dp"
        android:padding="5dp"
        android:text="Plástica"
        android:textSize="24sp"
        fbutton:buttonColor="@color/fbutton_color_sun_flower"
        fbutton:cornerRadius="5dp"
        fbutton:shadowColor="@color/fbutton_color_orange"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp" />

</LinearLayout>